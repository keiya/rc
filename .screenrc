escape ^x^x
autodetach on
defbce on
vbell off
defscrollback 10000
startup_message off
hardstatus on
hardstatus alwayslastline
hardstatus string "%{.bW}%{.rW}%n: %t %{-} %=%{..G}%H %{..Y}LoadAvg: %l %0c "
caption always "%{= wk} %-w%{=bu dr}%n %t%{-}%+w"
logfile ~/.screen/%y-%m-%d_%0c:%s.%n.log

defutf8 on
defkanji utf8
defencoding utf8
